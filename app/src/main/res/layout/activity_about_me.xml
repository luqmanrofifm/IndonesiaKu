<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".AboutMeActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_marginTop="48dp"
        android:id="@+id/profil_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/profil2"/>

    <TextView
        android:id="@+id/nama_profil"
        android:layout_marginTop="24dp"
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:layout_below="@id/profil_image"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@android:color/black"
        android:text="LUQMAN ROFIF MUNTASHIR"/>

    <TextView
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:layout_below="@id/nama_profil"
        android:layout_centerHorizontal="true"
        android:textSize="17sp"
        android:textColor="@android:color/black"
        android:layout_marginTop="16dp"
        android:text="luqmanrofif@gmail.com"/>


</RelativeLayout>